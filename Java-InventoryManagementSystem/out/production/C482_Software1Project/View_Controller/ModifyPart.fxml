<AnchorPane prefHeight="424.0" prefWidth="600.0" style="-fx-background-color: #e6e6e6;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.ModifyPartController">
   <children>
      <VBox prefHeight="356.0" prefWidth="600.0">
         <children>
            <GridPane vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="192.0" minWidth="10.0" prefWidth="113.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="304.0" minWidth="10.0" prefWidth="192.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0" prefWidth="285.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="PartIDLbl" text="ID:" GridPane.rowIndex="1">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="PartLocationLbl" layoutX="10.0" layoutY="17.0" GridPane.rowIndex="6">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="PartMaxLbl" layoutX="10.0" layoutY="17.0" text="Max:" GridPane.rowIndex="5">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="PartPriceLbl" layoutX="10.0" layoutY="17.0" text="Price/Cost:" GridPane.rowIndex="4">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="PartInvLbl" layoutX="10.0" layoutY="17.0" text="Inventory:" GridPane.rowIndex="3">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <Label fx:id="PartNameLbl" layoutX="10.0" layoutY="17.0" text="Name:" GridPane.rowIndex="2">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="1">
                     <children>
                        <RadioButton fx:id="InHouseBtn" mnemonicParsing="false" onMouseClicked="#ModPartInHouse" text="In-House">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="PartToggleGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="OutsourcedBtn" mnemonicParsing="false" onMouseClicked="#ModPartOutSourced" text="Outsourced" toggleGroup="$PartToggleGroup">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </RadioButton>
                     </children>
                     <padding>
